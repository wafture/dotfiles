#
# git: core configs
#
[alias]

  # view pretty, abbreviated commit history, with sha
  lg = log --pretty=oneline -n 20 --graph --abbrev-commit

  # view shortened status
  stat = status -s

  # switch to new branch, create if necessary
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

  # commit everything
  ca = !git add -A && git commit -av

[core]

  # change default editor
  editor = vim

  # use pretty pager
  pager  = less -FRX

[diff]

  # detect copies as well as renames
  renames = copies

[commit]
  gpgsign = true

[gpg]
  program = /usr/local/bin/gpg

[push]
  default = matching

[help]

  # autocorrect mistakes
  autocorrect = 1

#
# git: user settings
#
[user]
  name = Nicholas Anderson
  email = nicholas.anderson@nike.com
  signingkey = 4EB3B0E6185CEEE0

[github]
  user  = iamnande
